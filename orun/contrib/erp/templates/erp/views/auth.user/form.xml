<form>
  <field name="name"/>
  <field name="username"/>
  <field name="email"/>
  <field name="password" cols="3"/>
  <field name="active" cols="3"/>
  <field name="is_staff"/>
  <field name="is_superuser"/>
  <div class="col-3">
    <button type="button" class="btn btn-outline-secondary" name="auth.ChangePassword" target="new">{{ gettext('Change password') }}</button>
  </div>
  <field name="user_action"/>
  <field name="date_joined"/>
  <field name="signature"/>
  <field name="user_company"/>
  <tabset>
    <tab>
      <tab-heading>{{ gettext('Groups') }}</tab-heading>
      <field name="groups" nolabel/>
    </tab>
    <tab>
      <tab-heading>{{ gettext('Companies') }}</tab-heading>
      <field name="companies" nolabel/>
    </tab>
    <tab>
      <tab-heading>API Tokens</tab-heading>
      <field name="tokens" nolabel/>
    </tab>
  </tabset>
</form>
